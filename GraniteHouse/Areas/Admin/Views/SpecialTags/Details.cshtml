@model SpecialTags
@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info">Special Tag Details</h2>

<div class="p-4 border rounded">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-5">
            <input type="text" disabled asp-for="Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-success btn-sm">Back to List</a>
    </div>
</div>