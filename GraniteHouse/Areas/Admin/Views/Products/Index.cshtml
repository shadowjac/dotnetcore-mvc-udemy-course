@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Products List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i> New Product</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.Available)</th>
            <th>@Html.DisplayNameFor(m => m.ProductTypes)</th>
            <th>@Html.DisplayNameFor(m => m.SpecialTags)</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayTextFor(m => item.Name)</td>
                <td>@string.Format("{0:C}", item.Price)</td>
                <td>@Html.CheckBoxFor(m => item.Available, new { disabled = "true" })</td>
                <td>@Html.DisplayTextFor(m => item.ProductTypes.Name)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.SpecialTags.Name))
                    {@Html.DisplayTextFor(m => item.SpecialTags.Name)}
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
        }
    </table>
</div>