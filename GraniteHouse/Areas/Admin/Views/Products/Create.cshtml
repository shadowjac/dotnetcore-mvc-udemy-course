@model GraniteHouse.Models.ViewModels.ProductsViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create Product</h2>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Name" class="form-control" />
            </div>
            <span asp-validation-for="Products.Name"></span>
        </div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Price" class="form-control" />
            </div>
            <span asp-validation-for="Products.Price"></span>
        </div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="Products.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control-file" />
            </div>
        </div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-5">
                <select asp-for="Products.ProductTypeId" asp-items="Model.ProductTypes.ToSelectListItem(Model.Products.ProductTypeId)" class="form-control"></select>
            </div>
        </div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="SpecialTags"></label>
            </div>
            <div class="col-5">
                <select asp-for="Products.SpecialTagId" asp-items="Model.SpecialTags.ToSelectListItem(Model.Products.SpecialTagId)" class="form-control"></select>
            </div>
        </div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="Products.ShadeColor"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.ShadeColor" class="form-control" />
            </div>
            <span asp-validation-for="Products.ShadeColor"></span>
        </div>
        <div class=" form-group row">
            <div class="col-2">
                <label asp-for="Products.Available"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="Products.Available" class="form-check" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
